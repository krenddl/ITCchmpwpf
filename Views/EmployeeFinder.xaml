<Page x:Class="ITCChampionship.Views.EmployeeFinder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ITCChampionship.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeeFinder">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="20" Orientation="Vertical">
                <TextBlock FontFamily="Calibri" FontSize="15">Departaments</TextBlock>
            <ListBox Name="DepartmentList" SelectionMode="Single">
                <ListBoxItem Margin="0,5">Admin</ListBoxItem>
                <ListBoxItem Margin="0,5">IT Helpdesk</ListBoxItem>
                <ListBoxItem Margin="0,5">Sales</ListBoxItem>
                <ListBoxItem Margin="0,5">Marketing</ListBoxItem>
            </ListBox>
                
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.ColumnSpan="2" >
            <TextBox x:Name="SearchBox" TextChanged="SearchBox_TextChanged"></TextBox>
            <ListBox MouseDoubleClick="SearchBox_MouseDoubleClick" Height="300"></ListBox>
        </StackPanel>
        
    </Grid>
</Page>
